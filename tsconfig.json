{
  "extends": "./tsconfig.style.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "node",
      "web",
      "vite-plugin-svgr/client",
      "@testing-library/jest-dom",
      "vitest/globals"
    ],
    "paths": {
      // 顺序不能打乱，保证 website 复写 *
      "@bangumi/*": ["packages/*/index.tsx", "packages/*/index.ts"],
      "@bangumi/website/*": ["packages/website/src/*"]
    }
  },
  "include": [
    "./packages",
    "./tests/",
    "./dev/",
    ".eslintrc.js",
    "vitest.config.ts",
    ".github/scripts/*",
    "./packages/design/.storybook/*"
  ]
}
